---
import { type AwardDetails } from "../awards";
import type { Category } from "../utils/data";
import ExternalLink from "./links/ExternalLink.astro";

export type Props = AwardDetails & { category: Category };

const { year, tier, category, emoji, url } = Astro.props;
---

This {category} won the {emoji}{tier} medal in my <ExternalLink href={url}>
  {`${year} Yearly Media Review`}
</ExternalLink>.
