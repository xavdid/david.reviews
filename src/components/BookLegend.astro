---
import ExternalLink from "./links/ExternalLink.astro";

type Props = {
  awardUrl?: string;
  showRereads?: boolean;
};

const {
  awardUrl = "https://xavd.id/blog/tags/yearly-review",
  showRereads = true,
} = Astro.props;
---

<ul
  class="mb-4 rounded bg-emerald-50 p-2 dark:bg-emerald-950 dark:ring-1 dark:ring-white"
>
  <li>🔈 - Audiobook</li>
  {showRereads && <li>🔁 - Re-read</li>}
  <li>
    🥇 / 🥈 / 🥉 -
    <ExternalLink href={awardUrl}>
      {"Favorite of the Year"}
    </ExternalLink> honoree.
  </li>
</ul>
