---
type Props = {
  href: string;
  classes?: Array<string | string[]>;
  external?: boolean;
};

const { href, classes = [], external } = Astro.props;

const extraProps =
  external === true ? { target: "_blank", rel: "noopener" } : {};
---

<a
  {...extraProps}
  class:list={["underline hover:bg-blue-100 dark:hover:bg-blue-700", classes]}
  href={href}><slot /></a
>
