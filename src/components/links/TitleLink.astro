---
type Props = {
  href: string;
  classes?: string[];
};

const { href, classes = [] } = Astro.props;
---

<h3
  class:list={[
    "text-l",
    "inline",
    "font-bold",
    "underline",
    "text-blue-600",
    "dark:text-blue-300",
    "hover:bg-blue-100",
    "dark:hover:bg-zinc-800", // no hover
    "dark:hover:text-white",
    classes,
  ]}
>
  <a href={href}>
    <slot />
  </a>
</h3>
