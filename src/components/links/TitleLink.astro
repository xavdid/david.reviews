---
type Props = {
  href: string;
  classes?: string[];
};

const { href, classes = [] } = Astro.props;
const classList = [
  "text-l",
  "inline",
  "font-bold",
  "underline",
  "text-blue-600",
  "dark:text-blue-300",
  "hover:bg-blue-100",
  "dark:hover:bg-zinc-800", // no hover
  "dark:hover:text-white",
  classes,
];
---

<h3 class:list={classList}><a href={href}><slot /></a></h3>
