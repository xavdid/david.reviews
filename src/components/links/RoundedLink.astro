---
type Props = {
  href: string;
};

const { href } = Astro.props;
---

<a
  class:list={[
    "rounded",
    "bg-blue-200 hover:bg-blue-300",
    "py-[0.125rem]",
    "px-1",
    "mr-[0.10rem]",
    "dark:bg-blue-700 dark:hover:bg-blue-600",
    "dark:ring-1 dark:ring-white",
    "no-underline",
    "not-italic",
    "text-nowrap",
  ]}
  href={href}><slot /></a
>
