---
import StarEmpty from "./icons/star-empty.astro";
import StarFilled from "./icons/star-filled.astro";

type Props = {
  rating: number;
  classes?: string[];
  starHeight?: string;
};

const { rating, classes: componentClasses, starHeight = "h-4" } = Astro.props;
const starClasses = ["mb-[0.25em] inline", starHeight];
---

<div class:list={[componentClasses, "whitespace-nowrap"]}>
  {
    Array.from({ length: rating }).map(() => (
      <StarFilled classes={[starClasses]} />
    ))
  }{
    Array.from({ length: 4 - rating }).map(() => (
      <StarEmpty classes={[starClasses, "dark:fill-white"]} />
    ))
  }
</div>
