---
import type { MaterializedAuthor } from "../airtable/data/authors";
import { authorPermalink } from "../utils";
import RoundedLink from "./links/RoundedLink.astro";
import SubtleLink from "./links/SubtleLink.astro";
type Props = {
  authors: MaterializedAuthor[];
  style: "subtle" | "rounded";
};

const { authors, style = "rounded" } = Astro.props;
const LinkComponent = style === "rounded" ? RoundedLink : SubtleLink;
---

<span
  >{
    authors.map((author, index) => (
      <>
        {/* little .join(", ") replacer */}
        {index > 0 && ", "}{" "}
        <LinkComponent href={authorPermalink(author.slug)}>
          {author.name}
        </LinkComponent>
      </>
    ))
  }</span
>
