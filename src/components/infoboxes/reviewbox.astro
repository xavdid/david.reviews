---
import Rating from "../rating.astro";

type Props = {
  rating: number;
  watchedOn: string;
  notes: string;
  watchNumber: number;
};

const { rating, watchedOn, watchNumber, notes } = Astro.props;
---

<div class="mb-6 rounded border-2 border-red-500 odd:bg-red-50">
  <div class="flex justify-between border-b-2 border-red-500 px-2">
    <span>{watchedOn}</span>
    <span>Watch #{watchNumber}</span>
    <div><Rating rating={rating} /></div>
  </div>
  <p class="px-1 pb-1">{notes || <em>no review</em>}</p>
</div>
