---
import type { Author } from "../../../airtable/data/authors";
import { loadReads } from "../../../airtable/data/reads";
import RoundedLink from "../../../components/links/RoundedLink.astro";
import SubtleLink from "../../../components/links/SubtleLink.astro";
import Layout from "../../../layouts/Layout.astro";

const reads = await loadReads();

const authors = Object.values(reads).reduce<
  Record<string, Author & { books: Set<string>; numReads: number }>
>((result, read) => {
  read.book.authors.forEach((a) => {
    if (a.slug in result) {
      result[a.slug].numReads += 1;
      result[a.slug].books.add(read.book.gbid);
    } else {
      result[a.slug] = {
        ...a,
        books: new Set([read.book.gbid]),
        numReads: 1,
      };
    }
  });

  return result;
}, {});
---

<Layout
  pageTitle={`Book Authors`}
  seoTitle={"All Book Authors"}
  seoDescription={`A list of the ${
    Object.keys(authors).length
  } different authors I've read at least one book by.`}
  activeTab="books"
>
  <h1 class="pt-2 text-2xl">All Authors</h1>
  <p class="py-3">
    I've read at least one book by {Object.keys(authors).length} different
    authors.You can also:
  </p>
  <ul class="list-disc pl-8 pt-2">
    <li class="pb-3">
      See <RoundedLink href="/books/">recent reads</RoundedLink>
    </li>
    <li class="pb-3">
      See <RoundedLink href="/books/series/">all series</RoundedLink>
    </li>
  </ul>
  <table class="w-fit table-auto border-separate">
    <thead class="sticky top-0 bg-white dark:bg-zinc-800">
      <tr>
        <th>Name</th>
        <th class="px-2"># Books</th>
        <th class="px-2"># Books Read</th>
      </tr>
    </thead>
    <tbody>
      {
        Object.values(authors)
          .toSorted((a, b) => (a.lastName > b.lastName ? 1 : -1))
          .map((author) => (
            <tr class=" odd:bg-green-100 dark:odd:bg-green-900">
              <td class="px-2 py-3">
                <SubtleLink href={author.permalink}>
                  {author.fullName}
                </SubtleLink>
              </td>
              <td class="pl-3">{author.books.size}</td>
              <td class="pl-3">{author.numReads}</td>
            </tr>
          ))
      }
    </tbody>
  </table>
</Layout>
